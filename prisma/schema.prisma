// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator erd {
  provider    = "prisma-erd-generator"
  theme       = "dark"
  ignoreEnums = "true"
  output      = "../ERD.png"
}

model admin {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  fullname String
  email    String
  password String
}

model user {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  fullname    String
  email       String        @unique
  password    String
  resume      String?
  isAdmin     Boolean       @default(false)
  appliedJobs application[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model cartegory {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  jobs        job[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model location {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  city_name String
  jobs      job[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/// filter based on full time or part time 
model job {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  jobType       type          @default(fullTime)
  description   String?
  email         String?
  address       String?
  salaryRange   salaryRange
  noOfPositions String?
  company       String?
  experience    String?
  application   application[]
  cartegory     cartegory?    @relation(fields: [industry], references: [id])
  industry      String?       @db.ObjectId
  location      location?     @relation(fields: [locationId], references: [id])
  locationId    String?       @db.ObjectId
  updatedAt     DateTime      @updatedAt
  createdAt     DateTime      @default(now())
}

model application {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  status    status
  job       job?     @relation(fields: [jobId], references: [id])
  jobId     String?  @db.ObjectId
  user      user?    @relation(fields: [userId], references: [id])
  userId    String?  @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

type salaryRange {
  from Float @default(0.00)
  to   Float @default(0.00)
}

enum status {
  Submitted
  Accepted
  Declined
}

enum type {
  fullTime
  partTime
}
